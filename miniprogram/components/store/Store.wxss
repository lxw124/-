.store{width:100%;
      height:1200rpx;
      background-color: white
}
.top{width:100%;
    height:70rpx;
}
.text{width:500rpx;
      height:30rpx;
      font-size:30rpx;
      margin:auto;
}
.text>text{display: inline-block;
         margin-left:10rpx;
}
.pointer{
        background-color:black;
        color:white;
        width:34rpx;
        height:34rpx;
        border-radius: 50%;
        line-height:34rpx;
        text-align: center;
}
.pic{margin-top:40rpx;
    width:100%;
    height:140rpx;
}
.book{display: grid;
     grid-template-columns: repeat(3,1fr)
}
.book image{width:70%;
          height:260rpx;
          display: block;
          margin:auto;
}
.read{display:block;
    width:100%;
    height:25rpx;
    text-align: center;
    font-size:20rpx;
}
.small{display:block;
      width:100%;
      height:20rpx;
      color:deeppink;
      font-size:20rpx;
      text-align: center;
}