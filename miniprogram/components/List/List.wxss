.head{width:70%;
      margin:40rpx auto;
      height:50rpx;
      text-align: center;
      font-size:20rpx;
}
.pointer{display:inline-block;
        width:30rpx;
        height:30rpx;
        background-color: rgb(243,52,71);
        border-radius: 50%;
        line-height: 30rpx;
        color:white;
}
.list{display: grid;
    width:100%;
    grid-template-columns: repeat(2,1fr);
}
.img{height:350rpx;
    font-size:20rpx;
    text-align: center;
    margin-top:30rpx;
}
.img>image{width:100%;
          height:320rpx;
}
.price{display: block;
      color:deeppink;
      width:100%;
      text-align: center;
}
